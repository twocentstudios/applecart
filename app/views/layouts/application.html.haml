		.container-fluid
			%section
				- flash.each do |key, value|
					%div{:class => "alert alert-#{key}"}
						%button{:type => 'button', :class => 'close', :data => { :dismiss => 'alert' }}Ã—
						= "#{value}"
				= yield
			= render 'layouts/footer'
