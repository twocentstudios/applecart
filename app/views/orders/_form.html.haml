= simple_nested_form_for @order, :html => {:class => "form-horizontal"} do |f|
	= f.simple_fields_for :order_items do |oi|
		= oi.label oi.object.item.name
		= oi.input :quantity, :label => 'Qty'
	.form-actions
		= f.button :submit, :class => "btn btn-primary"
		= link_to "Cancel", @order, :class => "btn"