.header
	%h1 All Orders

#order-list.tablediv
	%table.table
		%thead
			%tr
				- ['Order ID','Name','Email','# Apples','Order Total','Status','Paid?'].each do |header|
					%th= header
		%tbody
			- @orders.each_with_index do |order, i|
				%tr
					%td= order.id
					%td= link_to order.user.name, order
					%td= mail_to order.user.email, order.user.email
					%td= order.total_apples
					%td= number_to_currency(order.total)
					= status_toggle_cell(order)
					= paid_toggle_cell(order)

%hr

#total
	%h2= "Total of all non-open orders: #{number_to_currency(Order.total)}"

%hr
